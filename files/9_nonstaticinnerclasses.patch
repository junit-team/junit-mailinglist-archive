+package org.junit.internal.builders;
+
+import java.lang.reflect.Modifier;
+
+import org.junit.runner.Runner;
+import org.junit.runners.model.RunnerBuilder;
+
+public class NonStaticInnerClassBuilder extends RunnerBuilder {
+
+	@Override
+	public Runner runnerForClass(final Class<?> testClass) throws Throwable {
+		final boolean isMemberClass= testClass.isMemberClass();
+		final boolean isStatic= Modifier.isStatic(testClass.getModifiers());
+		if (isMemberClass && !isStatic) {
+			return new AllDefaultPossibilitiesBuilder(true)
+					.runnerForClass(testClass.getDeclaringClass());
+		}
+		return null;
+	}
+}
